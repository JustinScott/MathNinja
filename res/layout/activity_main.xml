<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a99a71" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#ff000000"
        android:textSize="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:textColor="#ff000000"
        android:textSize="50sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/yinyang3"
        android:contentDescription="@string/img_desc" />
    
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/dojolarge"
        android:contentDescription="@string/img_desc" />    
        
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/blackchalkboard1"
        android:contentDescription="@string/img_desc" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="130dp"
        android:textColor="#ff0000"
        android:textSize="70sp"
        android:gravity="center_vertical|right" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="130dp"
        android:textColor="#ff0000"
        android:textSize="70sp"
        android:gravity="center_vertical|right" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp"
        android:textColor="#ff0000"
        android:textSize="40sp" />
    
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/ninjagirl2"
        android:contentDescription="@string/img_desc" />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="340dp"
        android:onClick="clickButton"
        android:drawableLeft="@drawable/ninjastar1"
        android:textSize="25sp"
        android:textStyle = "bold" />    
    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/button1"
        android:layout_alignTop="@+id/button1"
        android:onClick="clickButton"
        android:drawableRight="@drawable/ninjastar1"
        android:textSize="25sp"
        android:textStyle = "bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:onClick="clickButton"
        android:drawableLeft="@drawable/ninjastar1"
        android:textSize="25sp"
        android:textStyle = "bold" />
    
    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/button3"
        android:layout_alignTop="@+id/button3"
        android:onClick="clickButton"
        android:drawableRight="@drawable/ninjastar1"
        android:textSize="25sp"
        android:textStyle = "bold" />
    
</RelativeLayout>
