<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a99a71">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#ff000000"
        android:textSize="50sp"
        android:text="test"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="#ff000000"
        android:textSize="50sp"
        android:text="test"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/backgroung"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/dojolarge" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chalkboard"
            android:src="@drawable/blackchalkboard1"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ninja"
            android:src="@drawable/ninjagirl2"
            android:layout_alignRight="@id/backgroung"
            android:layout_alignEnd="@+id/backgroung"
            android:layout_alignBottom="@id/backgroung"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chalkboard"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:textColor="#ff0000"
            android:textSize="70sp"
            android:gravity="center_vertical|end" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:textColor="#ff0000"
            android:textSize="70sp"
            android:gravity="center_vertical|end" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:textColor="#ff0000"
            android:textSize="40sp" />
    </RelativeLayout>
</RelativeLayout>